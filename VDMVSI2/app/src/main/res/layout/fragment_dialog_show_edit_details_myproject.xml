<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white_full"
    android:paddingBottom="@dimen/padding_item"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/btn_back_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_full"
        android:layout_margin="@dimen/padding_item"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_back"
        android:textSize="@dimen/font_larger"/>

    <!-- input email - pass -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_back_edit"
        android:layout_above="@+id/btn_create_new">

        <LinearLayout
            android:id="@+id/ll_input_text_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/heigh_view_nomal"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/edt_title_project_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heigh_view_nomal"
                android:layout_marginLeft="@dimen/padding_item_half"
                android:layout_marginRight="@dimen/padding_item_half"
                android:layout_marginBottom="@dimen/padding_item_half"
                android:drawableLeft="@drawable/ic_title_project_blue"
                android:drawablePadding="@dimen/padding_item"
                android:hint="@string/txt_tile_project"
                android:textColorHint="@color/dark_ness_hint"
                android:layout_marginTop="@dimen/padding_item_half"
                android:textSize="@dimen/font_normal"
                android:gravity="center_vertical"
                android:textCursorDrawable="@drawable/cursor_edittext"
                android:imeOptions="actionNext"
                android:background="@null"
                android:textColor="@color/PrimaryColor" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/padding_item_half"
                android:layout_marginRight="@dimen/padding_item_half"
                android:layout_marginBottom="@dimen/padding_item_half"
                android:background="@color/PrimaryColor"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/spn_major_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heigh_view_nomaless"
                android:layout_marginLeft="@dimen/padding_item_half"
                android:layout_marginRight="@dimen/padding_item_half"
                android:layout_marginBottom="@dimen/padding_item_half"
                android:layout_marginTop="@dimen/padding_item_half"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/padding_item_half"
                android:layout_marginRight="@dimen/padding_item_half"
                android:layout_marginBottom="@dimen/padding_item_half"
                android:background="@color/PrimaryColor"/>

            <TextView
                android:id="@+id/tv_start_date_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heigh_view_nomal"
                android:layout_marginLeft="@dimen/padding_item_half"
                android:layout_marginRight="@dimen/padding_item_half"
                android:layout_marginBottom="@dimen/padding_item_half"
                android:textSize="@dimen/font_normal"
                android:gravity="center_vertical"
                android:textColor="@color/PrimaryColor"
                android:text="@string/txt_start_date_pro"
                android:drawableLeft="@drawable/ic_date_select_blue"
                android:background="@null"
                android:drawablePadding="@dimen/padding_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/padding_item_half"
                android:layout_marginRight="@dimen/padding_item_half"
                android:layout_marginBottom="@dimen/padding_item_half"
                android:background="@color/PrimaryColor"/>

            <TextView
                android:id="@+id/tv_end_date_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heigh_view_nomal"
                android:layout_marginLeft="@dimen/padding_item_half"
                android:layout_marginRight="@dimen/padding_item_half"
                android:layout_marginBottom="@dimen/padding_item_half"
                android:textSize="@dimen/font_normal"
                android:gravity="center_vertical"
                android:textColor="@color/PrimaryColor"
                android:text="@string/txt_end_date_pro"
                android:drawableLeft="@drawable/ic_date_select_blue"
                android:background="@null"
                android:drawablePadding="@dimen/padding_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/padding_item_half"
                android:layout_marginRight="@dimen/padding_item_half"
                android:layout_marginBottom="@dimen/padding_item_half"
                android:background="@color/PrimaryColor"/>

            <EditText
                android:id="@+id/edt_content_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/heigh_view_nomal"
                android:layout_marginLeft="@dimen/padding_item_half"
                android:layout_marginRight="@dimen/padding_item_half"
                android:layout_marginBottom="@dimen/padding_item_half"
                android:drawableLeft="@drawable/ic_content_blue"
                android:drawablePadding="@dimen/padding_item"
                android:hint="@string/txt_content"
                android:textColorHint="@color/dark_ness_hint"
                android:layout_marginTop="@dimen/padding_item_half"
                android:textSize="@dimen/font_normal"
                android:gravity="center_vertical"
                android:textCursorDrawable="@drawable/cursor_edittext"
                android:imeOptions="actionNext"
                android:background="@null"
                android:textColor="@color/PrimaryColor" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/padding_item_half"
                android:layout_marginRight="@dimen/padding_item_half"
                android:layout_marginBottom="@dimen/padding_item_half"
                android:background="@color/PrimaryColor"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_create_new_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector_blue_border_bkg"
        android:text="@string/txt_create_new"
        android:textColor="@color/PrimaryColor"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/padding_item_half"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_item_half"
        android:layout_marginBottom="@dimen/padding_item"
        android:textSize="@dimen/font_normal"/>
</RelativeLayout>